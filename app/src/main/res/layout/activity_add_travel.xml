<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AddTravel.AddTravelActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="5sp"
            android:text="Enter Name:" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="4sp"
            android:text="Enter phone" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="172dp"
            android:layout_height="45dp"
            android:layout_margin="5sp"
            android:text="Enter costumer Email" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5sp"
            android:text="Enter departing date" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_margin="5sp"
            android:text="Enter return  date" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5sp"
            android:text="Enter num of passengers" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="3sp"
            android:text="Demand status" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5sp"
            android:text="Chosen company" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="171dp"
            android:layout_height="52dp"
            android:layout_margin="5sp"
            android:text="Enter pickup address" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="5sp"
            android:text="Enter Destination address" />

        <Button
            android:id="@+id/Btn_addDestAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Destination address"
            android:onClick="add_Address"
            android:textSize="10dp" />

        <Button
            android:id="@+id/Btn_saveTravelRequest"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:onClick="save_travel_request"
            android:text="Save travel request" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.519">

        <EditText
            android:id="@+id/Txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="text" />

        <EditText
            android:id="@+id/Txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ems="10"
            app:errorEnabled="true"

            android:inputType="phone" />

        <EditText
            android:id="@+id/Txt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ems="10"
            app:errorEnabled="true"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/Txt_DepartingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ems="10"
            app:errorEnabled="true"

            android:inputType="date" />

        <EditText
            android:id="@+id/Txt_returnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:autofillHints=""
            android:ems="10"
            app:errorEnabled="true"

            android:inputType="date" />

        <EditText
            android:id="@+id/Txt_NumPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:errorEnabled="true"
            />

        <EditText
            android:id="@+id/Txt_demandStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:errorEnabled="true"
            />

        <EditText
            android:id="@+id/Txt_chosenCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:errorEnabled="true"
            />

        <EditText
            android:id="@+id/Txt_pickupAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:errorEnabled="true"
            />

        <EditText
            android:id="@+id/Txt_destAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:errorEnabled="true"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>